{
  "name": "hydrate-stretch-desktop",
  "productName": "Hydrate & Stretch",
  "version": "2.0.0",
  "private": true,
  "main": "main.js",
  "type": "module",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "test": "node --test",
    "lint": "eslint ."
  },
  "devDependencies": {
    "electron": "^31.0.0",
    "electron-builder": "^24.13.3",
    "eslint": "^8.57.0"
  },
  "build": {
    "appId": "com.hydrate.stretch",
    "files": [
      "**/*"
    ],
    "directories": {
      "output": "release",
      "buildResources": "build"
    },
    "win": {
      "target": "nsis"
    },
    "mac": {
      "category": "public.app-category.healthcare-fitness"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}